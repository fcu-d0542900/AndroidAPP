<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.macdidi.material01.Material01Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle_background"
        android:orientation="vertical"
        android:padding="18dp">

        <Button
            android:id="@+id/explode_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickButton"
            android:padding="18dp"
            android:text="explode"/>

        <Button
            android:id="@+id/slide_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickButton"
            android:padding="18dp"
            android:text="slide" />

        <Button
            android:id="@+id/fade_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickButton"
            android:padding="18dp"
            android:text="fade" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Android 5.0 之前使用的元件不可以加入 android:transitionName 設定 -->
        <ImageView
            android:id="@+id/image_23"
            android:layout_width="64sp"
            android:layout_height="64sp"
            android:layout_margin="6sp"
            android:background="@drawable/android23"
            android:onClick="clickImage"
            android:src="@drawable/image_background"/>

        <ImageView
            android:id="@+id/image_24"
            android:layout_width="64sp"
            android:layout_height="64sp"
            android:layout_margin="6sp"
            android:background="@drawable/android24"
            android:onClick="clickImage"
            android:src="@drawable/image_background" />

        <ImageView
            android:id="@+id/image_26"
            android:layout_width="64sp"
            android:layout_height="64sp"
            android:layout_margin="6sp"
            android:background="@drawable/android26"
            android:onClick="clickImage"
            android:src="@drawable/image_background" />
    </LinearLayout>

</RelativeLayout>
